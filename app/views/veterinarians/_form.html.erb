<%= form_with(model: veterinarian, local: true, :html => {multipart:true}) do |form| %>
  <% if veterinarian.errors.any? %>
  <div id="error_explanation" class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
      </button>
      <h4><%= pluralize(veterinarian.errors.count, "error") %> prohibited this veterinarian from being saved:</h4>

      <ul>
      <% veterinarian.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class: "form-control", placeholder: "350 Fifth Avenue, New York, NY 10118" %>
  </div>

  <div class="form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone, class: "form-control", placeholder: "(123) 456-7890" %>
  </div>

  <div class="form-group">
    <%= form.label :website %>
    <%= form.text_field :website, class: "form-control", placeholder: "http://www.coldlightofdog.com" %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

<br>
  <div class="actions">
      <%= form.submit class: "btn btn-primary"%>
  </div>

<% end %>
