<p id="notice"><%= notice %></p>

<h1>Veterinarians</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @veterinarians.each do |veterinarian| %>
      <tr>
        <td><%= veterinarian.name %></td>
        <td><%= veterinarian.address %></td>
        <td><%= veterinarian.phone %></td>
        <td><%= veterinarian.website %></td>
        <td><%= link_to 'Show', veterinarian, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_veterinarian_path(veterinarian), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', veterinarian, class: "btn btn-link", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Veterinarian', new_veterinarian_path, class: "btn btn-link" %>
